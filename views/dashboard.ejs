<link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i&display=swap">
<link rel="stylesheet" href="assets/fonts/fontawesome-all.min.css">
</head>

<body id="page-top">
<div id="wrapper">
    <div class="d-flex flex-column" id="content-wrapper">
        <div id="content">
            <div class="container-fluid">
                <div class="d-sm-flex justify-content-between align-items-center mb-4">
                    <h3 class="text-dark mb-0">Your AI Health Dashboard</h3>
                    <a class="btn btn-primary btn-sm d-none d-sm-inline-block" role="button" href="/generate/generate-report">
                        <i class="fas fa-download fa-sm text-white-50"></i>&nbsp;Generate Health Report
                    </a>
                </div>

                <!-- Goal and Progress Card -->
                <div class="col-md-6 col-xl-3 mb-4">
                    <div class="card shadow border-left-success py-2">
                        <div class="card-body">
                            <div class="text-center">
                                <a href="https://imgbb.com/"><img src="https://i.ibb.co/YLHVCzn/calories2.jpg" alt="calories2" class="img-fluid mb-2" style="max-height: 110px;"></a>
                            
                            </div>
                            <div class="row g-0 align-items-center">
                                <div class="col me-2">
                                    <div class="text-uppercase text-success fw-bold text-xs mb-1">
                                        <span>Your Daily Calorie Goal</span>
                                    </div>
                                    <div class="text-dark h5 mb-0">
                                        Goal: <%= userGoalCalories || 0 %> kcal
                                    </div>
                                    <div class="text-dark h6 mb-2">
                                        Consumed: <%= nutritionData && nutritionData[0] ? nutritionData[0].totalCalories : 0 || 0 %> kcal
                                    </div>
                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-success" role="progressbar"
                                             style="width: <%= nutritionData && nutritionData[0] ? ((nutritionData[0].totalCalories / userGoalCalories) * 100).toFixed(2) : '0' %>%;">
                                            <span class="visually-hidden">
                                                <%= ((nutritionData && nutritionData[0] ? nutritionData[0].totalCalories : 0) / userGoalCalories * 100).toFixed(2) %>%</span>
                                        </div>
                                    </div>
                                    <div class="text-dark mt-2">
                                        <%= (((nutritionData && nutritionData[0] ? nutritionData[0].totalCalories : 0) / userGoalCalories) * 100).toFixed(2) %>% of your goal achieved
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-fire fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- New Statistics Cards Row -->
                <div class="row">
                    <!-- Total Calories Consumed Card -->
                    <div class="col-md-6 col-xl-3 mb-4">
                        <div class="card shadow border-left-success py-2">
                            <div class="card-body">
                                <div class="text-center">
                                    <a href="https://imgbb.com/"><img src="https://i.ibb.co/YdjTRxp/calories3.jpg" class="img-fluid mb-2" style="max-height: 120px" ></a>
                                </div>
                                <div class="row g-0 align-items-center">
                                    <div class="col me-2">
                                        <div class="text-uppercase text-success fw-bold text-xs mb-1"><span>Total Calories Consumed</span></div>
                                        <div class="text-dark h5 mb-0">
                                            <%= nutritionData && nutritionData[0] ? nutritionData[0].totalCalories : 0 %> kcal
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-burn fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Habits Followed Card -->
                    <div class="col-md-6 col-xl-3 mb-4">
                        <div class="card shadow border-left-warning py-2">
                            <div class="card-body">
                                <div class="text-center">
                                    <a href="https://imgbb.com/"><img src="https://i.ibb.co/LnhLVRV/habit.jpg" alt="habit" class="img-fluid mb-2" style="max-height: 110px;"></a>
                                 
                                </div>
                                <div class="row g-0 align-items-center">
                                    <div class="col me-2">
                                        <div class="text-uppercase text-warning fw-bold text-xs mb-1"><span>Habits Currently Following</span></div>
                                        <div class="text-dark fw-light h5 mb-0">No. of Habits Followed: <%= habits.length %></div>
                                        <ul>
                                            <% habits.forEach(habit => { %>
                                                <li><%= habit.habitName %></li>
                                            <% }); %>
                                        </ul>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-running fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Health Issues Card -->
                    <div class="col-md-6 col-xl-3 mb-4">
                        <div class="card shadow border-left-primary py-2">
                            <div class="card-body">
                                <div class="text-center">
                                    <a href="https://ibb.co/5LTf3p6"><img src="https://i.ibb.co/cQJ79f1/issue.png" alt="issue" style="max-height: 110px;"></a>
                                    
                                </div>
                                <div class="row g-0 align-items-center">
                                    <div class="col me-2">
                                        <div class="text-uppercase text-primary fw-bold text-xs mb-1"><span>Your Health Issues</span></div>
                                        <div class="text-dark h5 mb-0">
                                            <ul>
                                                <% healthProblems.forEach(prob => { %>
                                                    <li><%= prob.healthIssue %></li>
                                                <% }); %>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-stethoscope fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Health Improvement Progress Card -->
                    <div class="col-md-6 col-xl-3 mb-4">
                        <div class="card shadow border-left-info py-2">
                            <div class="card-body">
                                <div class="text-center">
                                    <a href="https://imgbb.com/"><img src="https://i.ibb.co/vhYR266/imporve.png" alt="imporve" class="img-fluid mb-2" style="max-height: 110px;"></a>
                        
                                </div>
                                <div class="row g-0 align-items-center">
                                    <div class="col me-2">
                                        <div class="text-uppercase text-info fw-bold text-xs mb-1"><span>Health Improvement</span></div>
                                        <div class="row g-0 align-items-center">
                                            <div class="col-auto">
                                                <div class="text-dark fw-bold h5 mb-0 me-3"><span>50%</span></div>
                                            </div>
                                            <div class="col">
                                                <div class="progress progress-sm">
                                                    <div class="progress-bar bg-info" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: 50%;"><span class="visually-hidden">50%</span></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <footer class="bg-white sticky-footer">
                    <div class="container my-auto">
                        <div class="text-center my-auto copyright"><span>Copyright Â© Pravin Raju T M</span></div>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    
    <a class="border rounded d-inline scroll-to-top" href="#page-top"><i class="fas fa-angle-up"></i></a>
</div>

<script src="assets/bootstrap/js/bootstrap.min.js"></script>
<script src="assets/js/theme.js"></script>
